
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>fr.iscpif.gridscale</groupId>
    <artifactId>parent</artifactId>
    <version>1.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <modules>
        <module>libraries</module>
        <module>gridscale</module>
    </modules>

    <properties>
        <!-- default configuration for the bundles -->
        <lib.org.scala-lang.scala.version>2.10.0-M7</lib.org.scala-lang.scala.version>
        <maven.scala.version>${lib.org.scala-lang.scala.version}</maven.scala.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <name>${project.artifactId} ${project.version}</name>


    <repositories>
        <repository>
            <id>iscpif</id>
            <name>iscpif Repo</name>
            <url>http://maven.iscpif.fr/public/</url>
        </repository>
        <repository>
            <id>iscpif snapshot</id>
            <name>iscpif snapshot Repo</name>
            <url>http://maven.iscpif.fr/public-snapshots/</url>
        </repository>
    </repositories>

</project>




